@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #f8f9fa; /* light grey background */
        font-family: Arial, sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .login-container img {
            display: block;
            margin: 0 auto 20px auto;
            max-height: 100px;
        }

    .login-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
        font-weight: bold;
    }

    .error-message {
        color: red;
        margin-bottom: 15px;
        text-align: center;
    }

    .form-control {
        margin-bottom: 15px;
    }

    .btn-primary {
        width: 100%;
    }
</style>

<div class="login-container">
    <!-- Campus Logo -->
    <img src="/images/campus-logo.png" alt="Campus Logo" />


    <h2 class="login-title">Login</h2>

    @if (ViewBag.Error != null)
    {
        <div class="error-message">@ViewBag.Error</div>
    }

    <form asp-action="Login" method="post">
        <div>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" required class="form-control" placeholder="Enter your email" />
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" name="password" id="password" required class="form-control" placeholder="Enter your password" />
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>
