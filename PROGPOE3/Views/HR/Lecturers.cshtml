@model IEnumerable<PROGPOE3.Models.Lecturer>

@{
    ViewData["Title"] = "Manage Lecturers";
}

<h2>Manage Lecturers</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.Name</td>
                <td>@lecturer.Email</td>
                <td>@lecturer.Phone</td>
                <td>
                    <a asp-action="EditLecturer" asp-route-id="@lecturer.Id" class="btn btn-sm btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
